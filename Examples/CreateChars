#include <stdint.h>
#include "lib/hd44780.h"

byte Heart[8] = {0b00000, 0b01010, 0b11111, 0b11111, 0b01110, 0b00100, 0b00000, 0b00000};
byte Bell[8] = {0b00100, 0b01010, 0b10001, 0b10001, 0b11111, 0b00100, 0b00000, 0b00000};
byte Arrow[8] = {0b00000, 0b00100, 0b01110, 0b11111, 0b00100, 0b00100, 0b00100, 0b00000};

main(void) {
  LiquidCrystalDevice device = init(0x27, 16, 2, LCD_5x8DOTS);
  turnOnBacklight(&device);
  
  setCursor(&device,0,0);
  createChar(&device, 0, Heart);
  print((byte)0);
  setCursor(&device, 0, 5);
  createChar(&device, 1, Bell);
  print((byte)1);
  setCursor(&device, 0, 14);
  createChar(&device, 2, Arrow);
  print((byte)2);
}
